@using SnowDayPredictor.Models

<div class="saved-locations-dropdown">
    @if (locations != null && locations.Any())
    {
        <label for="saved-locations-select">Saved Locations:</label>
        <div class="select-wrapper">
            <select id="saved-locations-select"
                    class="form-select"
                    @bind="selectedZip"
                    @bind:after="OnSelectionChanged">
                <option value="">Select a saved location...</option>
                @foreach (var location in locations)
                {
                    <option value="@location.ZipCode">@location.CityName (@location.ZipCode)</option>
                }
            </select>
            @if (!string.IsNullOrEmpty(selectedZip))
            {
                <button class="btn btn-sm btn-outline-danger delete-btn"
                        @onclick="DeleteCurrentLocation"
                        title="Delete this location">
                    🗑️
                </button>
            }
        </div>
    }
</div>

@code {
    [Parameter]
    public List<SavedLocation>? locations { get; set; }

    [Parameter]
    public EventCallback<string> OnLocationSelected { get; set; }

    [Parameter]
    public EventCallback<string> OnLocationDeleted { get; set; }

    private string selectedZip = "";

    private async Task OnSelectionChanged()
    {
        if (!string.IsNullOrEmpty(selectedZip) && selectedZip != "")
        {
            await OnLocationSelected.InvokeAsync(selectedZip);
        }
    }

    private async Task DeleteCurrentLocation()
    {
        if (!string.IsNullOrEmpty(selectedZip))
        {
            await OnLocationDeleted.InvokeAsync(selectedZip);
            selectedZip = ""; // Reset selection after delete
        }
    }

    // Public method to update selection from parent
    public void SetSelectedZip(string zip)
    {
        selectedZip = zip;
        StateHasChanged();
    }
}

<style>
    .saved-locations-dropdown {
        margin-bottom: 1rem;
    }

        .saved-locations-dropdown label {
            font-size: 0.9rem;
            font-weight: 500;
            color: #333;
            margin-bottom: 0.5rem;
            display: block;
        }

    .select-wrapper {
        display: flex;
        gap: 0.5rem;
        align-items: center;
    }

        .select-wrapper .form-select {
            flex: 1;
        }

    .delete-btn {
        padding: 0.375rem 0.75rem;
        white-space: nowrap;
    }
</style>